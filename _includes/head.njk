<!doctype html>
<html lang="{{ config.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{ title }}</title>
    <meta name="description" content="{{ description or site.description }}" />
    <meta name="generator" content="{{ eleventy.generator }}" />
    {% favicon './src/_images/guide-dog.svg' %}
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" onload="this.onload=null;this.rel='stylesheet';" > 
    <link rel="stylesheet" href="{{ '/theme.css' | url }}" onload="this.onload=null;this.media='all'" media="print" />

    <noscript>
      <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" /> 
      <link rel="stylesheet" href="{{ '/theme.css' | url }}" />
    </noscript>

    {% if layout === 'post.njk' or layout === 'post-minimal.njk' %}
      <meta property="og:site_name" content="{{config.title}}" />
      <meta property="og:type" content="article" />
      <meta name="twitter:card" content="summary" />
      <meta property="og:title" content="{{ title }}" />
      <meta property="og:description" content="{{ description }}" />
      {% if permalink %}
        <meta property="og:url" content="https://{{config.domain}}{{ permalink }}" />
        {% else %}
        <meta property="og:url" content="https://{{config.domain}}{{ page.filePathStem }}/" />
      {% endif %}

      {% if featuredImage !== undefined %}
        <meta property="og:image" content="https://{{config.domain}}{{featuredImage}}" />
        {% else %}
        <meta property="og:image" content="https://{{config.domain}}/_images/default.jpg" />
      {% endif %}

    {% endif %}
  </head>